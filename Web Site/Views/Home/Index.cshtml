@{
    ViewBag.Title = "Home Page";
}
@model IEnumerable<Web_Site.Models.Listings>
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="last-listings">Last Listings </div>
<div class="listings-background">
    <section class="home row">
        @foreach (var list in Model)
        {
            <article class="posts col-md-3" ;>
                <h1>
                    <a href="/Listings/SelectedCategorie/@list.SelectCategorie" style="color: darkred">@list.SelectCategorie</a>
                </h1>
                <h2 class="listings-title">
                    <a href="/Listings/Details/@list.Id" style="color: black">@list.Title</a>
                </h2>
                <div class="listings-title">
                    Created on:<i>@list.Date</i>
                    @if (@list.Author != null)
                {
                        @:by <i>@list.Author.FullName (@list.Author.UserName)</i>
                }

                </div>
                <p class="listings-title">
                    @Web_Site.Classes.Utils.CutText(list.Body)
                </p>
            </article>
        }
    </section>
</div>
<aside>
    <nav>
        <ul>
            <li><a href="/Listings/SelectedCategorie/@Listings.Categories.Cars" style="color: red">Cars</a></li>
            <li><a href="/Listings/SelectedCategorie/@Listings.Categories.Pets" style="color: red">Pets</a></li>
            <li><a href="/Listings/SelectedCategorie/@Listings.Categories.Vacation" style="color: red">Vacation</a></li>
            <li><a href="/Listings/SelectedCategorie/@Listings.Categories.Other" style="color: red">Other</a></li>
        </ul>

    </nav>
</aside>