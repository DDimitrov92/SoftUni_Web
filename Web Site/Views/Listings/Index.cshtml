@using Web_Site.Classes
@model IEnumerable<Web_Site.Models.Listings>

@{
    ViewBag.Title = "Index";
}
<h2>Listings</h2>

<p>
    @using (Html.BeginForm("Index", "Listings", FormMethod.Get))
    {
        <b>Search by: </b>@Html.RadioButton("searchBy", "Title", true) <text>Title</text>
        @Html.RadioButton("searchBy", "Author")
        <text>Author's UserName</text>
        <br />
        @Html.TextBox("search") <input type="submit" value="Search" />
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
           @Html.DisplayNameFor(model => model.SelectCategorie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Utils.CutText(item.Body)
            </td>
            <td>
                @item.SelectCategorie
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (item.Author != null)
                {
                    @item.Author.UserName
                    if (item.Author.FullName != null)
                    {
                        <br />
                        <i>(@item.Author.FullName)</i>
                    }
                }
                else
                {
                    <i>(No Author)</i>
                }
            </td>
            <td class="comment_col">
                @if (item.Comments.Count > 0)
                {
                    <div>@item.Comments.Count</div>
                }
                else
                {
                    <i>(No Comments)</i>
                }
            </td>
            <td>
                @if (User.IsInRole("Admin") || User.Identity.Name == item.Author.UserName)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })@: |
                    @Html.ActionLink("Details", "Details", new { id = item.Id })@: |
                    @Html.ActionLink("Comments", "Index", "Comments/Create")@: |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
                else
                {
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                }

            </td>
        </tr>
    }
</table>
