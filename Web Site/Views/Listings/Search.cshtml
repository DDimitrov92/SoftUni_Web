@using Web_Site.Classes
@model IEnumerable<Web_Site.Models.Listings>
@{
    ViewBag.Title = "Search Results";
}
<h2>Search Results</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectTown)
        </th>
        <th>Actions</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="6">No results to show!</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Utils.CutText(item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @if (item.Author != null)
                    {
                        @item.Author.UserName
                    }
                    else
                    {
                        <i>(No Author)</i>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments.Count)
                </td>
                <td>
                    @item.SelectTown
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.Identity.Name == item.Author.UserName)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })@: |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })@: |
                        @Html.ActionLink("Comments", "Index", "Comments/Create")@: |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                    else
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    }
                </td>
            </tr>
        }
    }
</table>
<h2>Search</h2>
<p>
    @Html.ActionLink("Back To All Listings", "Index")
</p>
